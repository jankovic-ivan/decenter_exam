{
  "name": "decenter-example",
  "version": "1.0.0",
  "description": "Comprehensive automation testing framework using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test --project=ui-tests",
    "test:api": "npx playwright test --project=api-tests",
    "test:ui": "npx playwright test --project=ui-tests",
    "ci": "npx playwright test --workers=1",
    "flaky": "npx playwright test --repeat-each=20",
    "debug": "npx playwright test --debug",
    "ui": "npx playwright test --ui",
    "smoke": "npx playwright test --grep @Smoke",
    "sanity": "npx playwright test --grep @Sanity",
    "api": "npx playwright test --grep @Api --project=api-tests",
    "regression": "npx playwright test --grep @Regression",
    "fullTest": "npx playwright test",
    "report": "npx playwright show-report"
  },
  "keywords": ["playwright", "testing", "automation", "e2e", "api"],
  "author": "Ivan J.",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.19.1"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "zod": "^4.1.13"
  }
}